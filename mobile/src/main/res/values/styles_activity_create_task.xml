<resources>

    <style name="CreateTaskActivityEditTextTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_xxxlarge</item>
        <item name="android:maxLength">255</item>
    </style>

    <style name="CreateTaskActivityOptionItemLayout" parent="RippleView">
        <item name="android:padding">@dimen/material_design_keyline_one</item>
    </style>

    <style name="CreateTaskActivityOptionItemIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="CreateTaskActivityOptionItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CreateTaskActivityOptionItemSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
</resources>
