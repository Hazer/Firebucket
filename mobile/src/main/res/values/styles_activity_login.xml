<resources>

    <style name="LoginActivityFormTitle" parent="SingleLineTextView">
        <item name="android:layout_marginBottom">@dimen/material_design_keyline_one</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_xxxlarge</item>
    </style>

    <style name="LoginActivityFormSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/material_design_keyline_one</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="LoginActivityFormEditText" parent="TextAppearance.AppCompat">
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorControlNormal">?colorPrimary</item>
        <item name="colorControlActivated">?colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/material_design_keyline_two</item>
        <item name="android:layout_marginBottom">@dimen/material_design_keyline_two</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:maxLength">255</item>
    </style>

    <style name="LoginActivityFormEmailEditText" parent="LoginActivityFormEditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="LoginActivityFormPasswordEditText" parent="LoginActivityFormEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="LoginActivityFormButton" parent="ButtonPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/material_design_keyline_one</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
