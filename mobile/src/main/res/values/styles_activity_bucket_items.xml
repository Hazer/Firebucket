<resources>

    <style name="BucketActivityItemHeaderTitle" parent="SingleLineTextView">
        <item name="android:layout_margin">@dimen/material_design_keyline_one</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BucketActivityItemTaskTitle" parent="MultiLineTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="BucketActivityItemTaskSubtitle" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="BucketActivityItemTaskTag" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:background">@drawable/bucket_item_tag_background</item>
        <item name="android:paddingTop">@dimen/material_design_keyline_three</item>
        <item name="android:paddingBottom">@dimen/material_design_keyline_three</item>
        <item name="android:paddingRight">@dimen/material_design_keyline_two</item>
        <item name="android:paddingLeft">@dimen/material_design_keyline_two</item>
    </style>

    <style name="BucketActivityItemTaskPriorityBadge" >
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
