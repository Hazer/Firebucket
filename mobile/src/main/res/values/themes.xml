<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Launch Screen theme-->
    <style name="AppTheme.LaunchScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_launch_screen</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item> <!-- Status bar -->
    </style>


    <style name="MainActivityTheme" parent="AppTheme">
        <!-- I set my background here and not in the view XML so
         the rendering will not draw the background twice -->
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="LoginActivityTheme" parent="AppTheme.NoActionBar">
        <!-- I set my background here and not in the view XML so
         the rendering will not draw the background twice -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="RegisterActivityTheme" parent="AppTheme.NoActionBar">
        <!-- I set my background here and not in the view XML so
         the rendering will not draw the background twice -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="OnBoardingActivityTheme" parent="AppTheme.NoActionBar">
        <!-- I set my background here and not in the view XML so
         the rendering will not draw the background twice -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="CreateTaskActivityTheme" parent="AppTheme.NoActionBar">
        <!-- I set my background here and not in the view XML so
         the rendering will not draw the background twice -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>